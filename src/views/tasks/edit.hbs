<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/edit/{{task._id}}" method="POST">
                    <h2>Edit task</h2>
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title" value="{{task.title}}" autofocus>
                    </div>
                    <div class="form-group"> 
                        <input type="text" class="form-control" name="description" placeholder="Write a description" value="{{task.description}}">
                    </div>
                    <button type="submit" class="btn btn-success btn-block">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>